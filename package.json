{
  "name": "@smartface/styler",
  "version": "2.0.1",
  "description": "Component styling wrapper",
  "main": "index.js",
  "type": "index.d.ts",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register ./test/**/*.test.js",
    "test:watch": "mocha --watch --compilers js:babel-core/register ./test/**/*.test.js",
    "prepublish": "npm run build",
    "watch": "tsc -w",
    "postpublish": "rm -rf ./lib",
    "build": "rm -rf ./lib && tsc",
    "docs:create": "jsdox ./src -o docs",
    "jase": "jase"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartface/styler.git"
  },
  "keywords": [
    "javascript",
    "mobile",
    "styling",
    "style"
  ],
  "author": "Cenk Cetinkaya",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smartface/styler/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/smartface/styler#readme",
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.4",
    "babel-jest": "^26.1.0",
    "chai": "^3.5.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cross-env": "^4.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "cz-customizable": "^5.0.0",
    "eslint": "^4.18.2",
    "jase": "^1.2.0",
    "jest": "^26.1.0",
    "jsdox": "^0.4.10",
    "minimist": "^1.2.0",
    "semver": "^5.3.0",
    "ts-jest": "^26.1.2",
    "typescript": "3.8.3",
    "dts-bundle": "^0.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "path": "./node_modules/cz-conventional-changelog",
      "config": "./.cz-config.js"
    }
  }
}
